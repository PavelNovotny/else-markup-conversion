                }
              },
              {
                "nested": {
                  "path": "nestedObject",
                  "query": {
                    "bool": {
                      "must": [
                        {
                          "query_string": {
                            "query": "{{searchString}}",
                            "fields": [
                              "nestedObject.field1"
                            ]
                          }
                        }
                      ]
                    }
                  }
                }
              },
              {
                "has_child": {
                  "type": "childObject",
