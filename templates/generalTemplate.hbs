                    "bool": {
                      "must": [
                        {
                          "query_string": {
                            "query": "{{searchString}}",
                            "fields": [
                              "childField1"
                            ]
                          }
                        }
                      ]
                    }
                  },
                  "inner_hits": {
                    "name" : "unique_name_for_highlight",
                    "highlight": {
                      "fields": {
                        "*": {
                          "number_of_fragments": 3
                        }
                      }
                    },
                    "from": 0,
                    "size": 1
                  }
                }
              }
            ]
          }
        },
        {{/general.searchStrings}}
        {}
