              "bool": {
                "must": [
                  {
                    "query_string": {
                      "query": "{{general.login_external}}",
                      "fields": [
                        "login"
                      ]
                    }
                  }
                ]
              }
            }
          }
        }
      ]
    }
  },
  "highlight": { //highlight
    "fields": {
      "*": {
        "highlight_query": { //highlight na hlavní entitě, flat a nested objektech
          "bool": {
            "should": [
             {{#general.searchStrings}}
              {
                  "query": "{{searchString}}",
                  "fields": [
                    "field1",
                    "nestedObject.field1"
